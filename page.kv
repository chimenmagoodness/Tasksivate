                        on_release:
                            self.icon = "eye-off" if self.icon == "eye" else "eye"
                            signup_password.password = False if signup_password.password is True else True
                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x":.5, "center_y":.365}
                    md_bg_color:  "#FBFBFB"
                    MDIconButton:
                        icon: "developer-board"
                        pos_hint: {"center_x":.1, "center_y":.53}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                        icon_size: "17sp"
                    MDTextField:
                        id: signup_skills
                        hint_text: 'Skills'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"

                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x": .5, "center_y": .25}
                    md_bg_color:  "#5D3AB7"
                    radius: [5]
                    MDTextButton:
                        text: "Sign Up"
                        color: 1, 1, 1, 1
                        font_name: app.fonts.poppinsbold
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release:
                            app.signup()

#                            root.manager.current = "main"

                MDLabel:
                    text: "Already have an Account? "
                    halign: "center"
                    pos_hint: {"center_x":.4, "center_y":.19}
                    font_size: 15
                    font_style: "Caption"
                    color: 130/255, 130/255, 130/255, 1

                MDTextButton:
                    text: "Login"
                    halign: "center"
                    pos_hint: {"center_x":.7, "center_y":.19}
                    font_size: 15
                    font_style: "Caption"
                    color: "#5D3AB7"
                    on_release:
                        app.change_page("login")
                        app.check_remember()