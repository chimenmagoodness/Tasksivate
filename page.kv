#: import NoTransition kivy.uix.screenmanager.NoTransition
<CustomSnackbar>
    md_bg_color: "#5D3AB7"
    MDIconButton:
        pos_hint: {'center_y': .5}
        icon: root.icon
        opposite_colors: True

    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: 'ffffff'
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}

MDScreen:
    name: "page"
    ScreenManager:
        id: scrn_mgnr
        transition: NoTransition()
        MDScreen:
            name: 'login'
            MDFloatLayout:
                id: login_layout
                orientation: "vertical"
                md_bg_color: "#EBEBEB"

                MDIconButton:
                    icon: "account-circle"
                    pos_hint: {"center_x":.5, "center_y":.8}
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 0.5 #1, 1, 1, 1
                    ripple_scale: 0
                    icon_size: "70dp"
                    icon_color: "#DFD7F3"

                MDLabel:
                    text: "Welcome Back"
                    halign: "center"
                    pos_hint: {"center_x":.5, "center_y":.73}
#                    font_size: 20
                    font_name: app.fonts.poppinsbold
#                    color: "#5D3AB7"

                MDLabel:
                    text: "Signin to continue"
                    halign: "center"
                    pos_hint: {"center_x":.5, "center_y":.7}
                    font_size: 15
                    font_style: "Caption"
                    color: 130/255, 130/255, 130/255, 1

                MDFloatLayout:
                    size_hint: .8, .073
                    pos_hint: {"center_x":.5, "center_y":.6}
                    md_bg_color:  "#FFFFFF"
                    elevation: 5
                    radius: [7]
                    MDIconButton:
                        icon: "email-outline"
                        pos_hint: {"center_x":.1, "center_y":.53}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                        icon_size: "17sp"
                    MDTextField:
                        id: login_email
                        hint_text: 'Email'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"

                MDFloatLayout:
                    size_hint: .8, .073
                    pos_hint: {"center_x":.5, "center_y":.48}
                    md_bg_color:  "#FFFFFF"
                    elevation: 5
                    radius: [7]
                    MDIconButton:
                        icon: "lock-outline"
                        pos_hint: {"center_x":.1, "center_y":.53}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                        icon_size: "17sp"
                    MDTextField:
                        id: login_password
                        hint_text: 'Password'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"
                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_x":.88, "center_y":.5}
                        icon_size: "14sp"
                        on_release:
                            self.icon = "eye-off" if self.icon == "eye" else "eye"
                            login_password.password = False if login_password.password is True else True

                MDCheckbox:
                    id: remember_user
                    size_hint: None, None
                    size: "20dp", "20dp"
                    pos_hint: {"center_x": .18, "center_y": .38}
                    on_release:
                        app.remember_user()

                MDTextButton:
                    text: "Remember me!"
                    halign: "center"
                    pos_hint: {"center_x":.38, "center_y":.38}
                    font_size: 15
                    font_style: "Caption"
                    color: "#5D3AB7" #130/255, 130/255, 130/255, 1
                    on_release:
                        app.remember_user()

                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x": .5, "center_y": .32}
                    md_bg_color:  "#5D3AB7"
                    radius: [5]
                    MDTextButton:
                        text: "Login"
                        color: 1, 1, 1, 1
                        font_name: app.fonts.poppinsbold
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release:
                            app.validate()

                MDLabel:
                    text: "Don't have an Account? "
                    halign: "center"
                    pos_hint: {"center_x":.4, "center_y":.25}
                    font_size: 15
                    font_style: "Caption"
                    color: 130/255, 130/255, 130/255, 1

                MDTextButton:
                    text: "Signup"
                    halign: "center"
                    pos_hint: {"center_x":.7, "center_y":.25}
                    font_size: 15
                    font_style: "Caption"
                    color: "#5D3AB7" #130/255, 130/255, 130/255, 1
                    on_release:
                        app.change_page("signup")


        MDScreen:
            name: 'signup'
            MDFloatLayout:
                id: signup_layout
                orientation: "vertical"
                md_bg_color:  "#FBFBFB"

                MDIconButton:
                    id: signup_back_btn
                    icon: "arrow-left"
                    pos_hint: {"center_x":.13, "center_y":.95}
                    theme_text_color: "Custom"
                    text_color: "#5D3AB7"
                    on_release:
                        scrn_mgnr.current = "login"
                MDLabel:
                    text: "Create Account"
                    halign: "center"
                    pos_hint: {"center_x":.5, "center_y":.85}
                    font_size: 20
                    font_name: app.fonts.poppinsbold

                MDLabel:
                    text: "create a new account"
                    halign: "center"
                    pos_hint: {"center_x":.5, "center_y":.82}
                    font_size: 15
                    font_style: "Caption"
                    color: 130/255, 130/255, 130/255, 1

                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x":.5, "center_y":.73}
                    md_bg_color:  "#FBFBFB"
                    MDIconButton:
                        icon: "account-outline"
                        pos_hint: {"center_x":.1, "center_y":.51}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                    MDTextField:
                        id: signup_fullname
                        hint_text: 'Full Name'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"

                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x":.5, "center_y":.635}
                    md_bg_color:  "#FBFBFB"
                    MDIconButton:
                        icon: "account-cowboy-hat-outline"
                        pos_hint: {"center_x":.1, "center_y":.53}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                        icon_size: "22sp"
                    MDTextField:
                        id: signup_username
                        hint_text: 'UserName'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"

                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x":.5, "center_y":.545}
                    md_bg_color:  "#FBFBFB"
                    MDIconButton:
                        icon: "email-outline"
                        pos_hint: {"center_x":.1, "center_y":.53}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                        icon_size: "17sp"
                    MDTextField:
                        id: signup_email
                        hint_text: 'Email'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        validator: "email"
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        hint_text_color: "#EBEBEB"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"

                MDFloatLayout:
                    size_hint: .8, .065
                    pos_hint: {"center_x":.5, "center_y":.455}
                    md_bg_color:  "#FBFBFB"
                    MDIconButton:
                        icon: "lock-outline"
                        pos_hint: {"center_x":.1, "center_y":.53}
                        theme_text_color: "Custom"
                        text_color: "#5D3AB7"
                        icon_size: "17sp"
                    MDTextField:
                        id: signup_password
                        hint_text: 'Password'
                        pos_hint: {"center_x":.55, "center_y":.49}
                        size_hint_x: .7
                        hint_text_color: "#EBEBEB"
                        font_size: "15sp"
                        line_color_normal: "#FBFBFB"
                        line_color_focus: "#FBFBFB"
                        theme_text_color: "Custom"
                        hint_text_color_focus: "gray"
                        text_color_focus: 93/255, 58/255, 183/255, 1 #"#5D3AB7"
                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_x":.85, "center_y":.49}
