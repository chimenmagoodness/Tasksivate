        md_bg_color: app.nav_icon_color #main_texture #"FFFFFF"
        radius: (dp(15), dp(15))
        size_hint: None, None #.85, .1
        height: dp(55)
        width: dp(270)
        shadow_offset: 0, 4
        shadow_softness: 3
        elevation: 4
        pos_hint:{"center_x":.5, "center_y":.15}
        GridLayout:
            cols: 5
            spacing: dp(3)
            padding: [dp(15), dp(15), dp(15), dp(15)]
            size_hint_x: .9
            pos_hint:{"center_x":.43, "center_y":.7}
            MDIconButton:
                id: nav_icon1
                icon: "menu"#"view-dashboard-outline"
                ripple_scale: 2
                theme_text_color: "Custom"
                text_color: "#abb3ac" #app.nav_icon_color #"#DFD7F3" #app.theme_cls.primary_color #200/255, 200/255, 200/255, 1
                pos_hint:{"center_x":.14, "center_y":.5}
                on_release:
                    app.change_color(self)
                    app.nav_drawer_open()
#                    app.show_inter_ads()
            MDIconButton:
                id: nav_icon2
                icon: "text-box-check-outline"
                ripple_scale: 2
                theme_text_color: "Custom"
                text_color: app.main_primary_color #"#5D3AB7" #200/255, 200/255, 200/255, 1
                pos_hint:{"center_x":.14, "center_y":.5}
                on_release:
                    app.change_color(self)
                    scrn_mgnr.current = "home"
                    app.nav_drawer_close()

            MDIconButton:
                id: nav_icon3
                icon: "meditation" #"weather-partly-cloudy"
                ripple_scale: 2
                theme_text_color: "Custom"
                text_color: "#abb3ac" #app.nav_icon_color #200/255, 200/255, 200/255, 1
                pos_hint:{"center_x":.62, "center_y":.5}
                on_release:
                    app.change_color(self)
                    scrn_mgnr.current = "motivation_screen"
                    app.nav_drawer_close()
#                    app.show_inter_ads()

            MDIconButton:
                id: nav_icon4
                icon: "note-edit-outline"#"air-filter"
                ripple_scale: 2
                theme_text_color: "Custom"
                text_color: "#abb3ac" #app.nav_icon_color #200/255, 200/255, 200/255, 1
                pos_hint:{"center_x":.82, "center_y":.5}
                on_release:
                    scrn_mgnr.current = "note_screen"
                    app.change_color(self)
                    app.nav_drawer_close()

            MDIconButton:
                id: nav_icon5
                icon: "chart-bell-curve-cumulative"#"account-heart-outline"
                ripple_scale: 2
                theme_text_color: "Custom"
                text_color: "#abb3ac" #app.nav_icon_color #200/255, 200/255, 200/255, 1
                pos_hint:{"center_x":.85, "center_y":.5}
                on_release:
                    scrn_mgnr.current = "insight"
                    app.change_color(self)
                    app.nav_drawer_close()